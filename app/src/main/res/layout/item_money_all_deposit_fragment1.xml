<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    >

    <TextView
        android:id="@+id/item_money_all_deposit_f1rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:text="0.72%"
        android:textColor="#ffda412f"
        android:textSize="18sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="112dp"
        >
        <TextView
            android:id="@+id/item_money_all_deposit_f1time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3个月-5年"
            android:textColor="#ff484e54"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#ff484e54"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/item_money_all_deposit_f1money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50元起存"
            android:textColor="#ff484e54"
            android:textSize="12sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19dp"
        android:layout_marginTop="6dp"
        >
        <ImageView
            android:id="@+id/item_money_all_deposit_f1bue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/deposit_bue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:textColor="#fffffbfa"
            android:textSize="12sp"
           android:layout_marginTop="4.5dp"
            android:layout_marginLeft="13dp"
            />
    </RelativeLayout>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年利率"
            android:textColor="#ffaaaaaa"
            android:textSize="12sp"
            android:layout_marginLeft="11dp"
            />
        <TextView
            android:id="@+id/item_money_all_deposit_f1brief"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="随时存取，灵活度大"
            android:textColor="#ffaaaaaa"
            android:textSize="9sp"
            android:layout_marginLeft="112dp"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="10dp"
        android:background="#EBEBEB"/>
</LinearLayout>