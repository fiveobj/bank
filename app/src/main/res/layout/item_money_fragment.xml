<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/item_money_fline"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/money_view2"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_money_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定活两便"
            android:textColor="#ff484e54"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/item_money_frate"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.1%"
            android:textColor="#ffda412f"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年利率"
            android:textColor="#ffaaaaaa"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/item_money_ftime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不定期"
                android:textColor="#ff484e54"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="#ff484e54"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/item_money_fmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50元起存"
                android:textColor="#ff484e54"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>