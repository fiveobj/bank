<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".deposit.MoneyAllDepositBuy1Fragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/depositbuy_view4"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新客专享定期3年期"
            android:textColor="#fffffbfa"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="年利率"
                        android:textColor="#ff484e54"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/all_deposit_buy1_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="3.35%"
                        android:textColor="#ffda412f"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/depositbuy_view9"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="100dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="存期"
                        android:textColor="#ff484e54"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/all_deposit_buy1_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3年"
                        android:layout_marginTop="4dp"
                        android:textColor="#ff484e54"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/depositbuy_view9"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="200dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="起存金额"
                        android:textColor="#ff484e54"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/all_deposit_buy1_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3000元"
                        android:layout_marginTop="4dp"
                        android:textColor="#ff484e54"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@mipmap/depositbuy_view6"
                android:layout_marginTop="65dp"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:text="产品面向自成为我行客户之日起6个月内新客户销售"
                    android:textColor="#ffb88960"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"

                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="130dp"/>

        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="180dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:elevation="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:text="交易规则"
                android:textColor="#ff484e54"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:src="@mipmap/depositbuy_view8" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="计息规则"
                    android:textColor="#ffda412f"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/depositbuy_view10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="存入规则"
                    android:textColor="#ff484e54"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/depositbuy_view10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="支取规则"
                    android:textColor="#ff484e54"
                    android:textSize="12sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提前支取收益:"
                    android:textColor="#DA412F"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="支持提前支取，提前支取部分按支取日我行活期存款利率计息，其余部分到期按存入日约定利率计息"

                    android:textColor="#ff484e54"
                    android:textSize="10sp" />
                <TextView
                    android:layout_marginTop="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满期综合收益:"
                    android:textColor="#DA412F"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="60dp"
                    android:text="
                           持有满期按存入日约定利率计息"
                    android:textColor="#ff484e54"
                    android:textSize="10sp"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/depositbuy_view5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="存入金额"
                android:textColor="#ff484e54"
                android:textSize="16sp"
                android:layout_marginLeft="27dp"
                />

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="167dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/depositbuy_view1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/all_deposit_buy1_monry"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:background="#ffffff"
                android:hint="3000.00起"
                android:gravity="left"
                android:textSize="12sp"/>


        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/depositbuy_view2"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计到期收益："
                android:textColor="#707070"
                android:textSize="10sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                />
            <TextView
                android:id="@+id/all_deposit_buy1_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00元"
                android:textColor="#ffda412f"
                android:textSize="10sp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/depositbuy_view5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转出账户"
                android:textColor="#ff484e54"
                android:textSize="16sp"
                android:layout_marginLeft="27dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="39dp"
                android:text="8292****6161"
                android:textColor="#ff118ecc"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/depositbuy_view7"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用余额（元）：666666.00"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:textColor="#ff484e54"
            android:textSize="12sp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/deposit_all_buy1_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/depositbuy_view3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="下一步"
            android:textColor="#fff2f4f5"
            android:textSize="14sp"
            />
    </RelativeLayout>

</LinearLayout>